#include <iostream>
using namespace std;
int main() {
/*algoritam za cijenu taksi usluge, start=1,5KM; ali ako je presao vise od 50km, cijena je jeftinija za 10%*/
float const a=1.5;
float b,c;
cout<<"Unesite cijenu usluge po km u KM: ";
cin>>b;
cout<<"Unesite koliko ste presli u km: ";
cin>>c;
if(c>50)
  c=c*0.9;
cout<<"Cijena koju trebate platiti iznosi: "<<b*c+a<<"KM\n";
return 0;
}
